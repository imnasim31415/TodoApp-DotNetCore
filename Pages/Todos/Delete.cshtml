@page "{id:int}"
@model TodoApp.Pages.Todos.DeleteModel
@{
    ViewData["Title"] = "Delete Todo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2>Delete Todo</h2>
                </div>
                <div class="card-body">
                    @if (Model.TodoItem == null)
                    {
                        <div class="alert alert-danger">Todo not found.</div>
                        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <strong>Are you sure you want to delete this todo?</strong>
                            <p class="mb-0">This action cannot be undone.</p>
                        </div>

                        <dl class="row">
                            <dt class="col-sm-3">Title</dt>
                            <dd class="col-sm-9">@Model.TodoItem.Title</dd>

                            @if (!string.IsNullOrWhiteSpace(Model.TodoItem.Description))
                            {
                                <dt class="col-sm-3">Description</dt>
                                <dd class="col-sm-9">@Model.TodoItem.Description</dd>
                            }

                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">
                                <span class="badge @(Model.TodoItem.IsCompleted ? "bg-success" : "bg-secondary")">
                                    @(Model.TodoItem.IsCompleted ? "Completed" : "Pending")
                                </span>
                            </dd>

                            <dt class="col-sm-3">Created</dt>
                            <dd class="col-sm-9">@Model.TodoItem.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")</dd>
                        </dl>

                        <form method="post">
                            <div class="d-flex justify-content-between">
                                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-danger">Delete Todo</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>