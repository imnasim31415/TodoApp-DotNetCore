@page
@model TodoApp.Pages.IndexModel
@{
    ViewData["Title"] = "Todo List";
}

<h1 class="mb-3">📝 Todo List</h1>

<form method="post" asp-page-handler="Add" class="mb-3">
    <input asp-for="NewTitle" placeholder="Enter new task" class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Add</button>
</form>

@if (Model.Items.Count == 0)
{
    <p class="text-muted">No tasks yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var item in Model.Items)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <form method="post" asp-page-handler="Toggle" asp-route-id="@item.Id" class="d-inline">
                    <button type="submit" class="btn btn-sm @(item.IsDone ? "btn-success" : "btn-outline-success")">
                        @(item.IsDone ? "✔" : "☐")
                    </button>
                </form>

                <span class="flex-grow-1 ms-2 @(item.IsDone ? "text-decoration-line-through text-muted" : "")">
                    @item.Title
                </span>

                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger">✖</button>
                </form>
            </li>
        }
    </ul>
}
